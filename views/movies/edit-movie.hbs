<h2>Editing Movies</h2>
<form action="/movies/edit-movie){{movie._id}}" method="POST">

  <label for="title">Title :</label>
  <input type="text" name="title" value="{{movies.title}}" />

  <label for="genre">Genre :</label>
  <input type="text" name="genre" value="{{movies.genre}}" />

  <label for="plot">Plot :</label>
  <input type="text" name="plot" value="{{movies.plot}}" />

  <select name="cast" multiple>
    <option value="{{movies.cast}}">choose a cast</option>
  </select>

  <button type="submit">Update</button>
</form>